{
    "manifest_version": 3,
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "version": "0.8.0",
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ],
    "optional_permissions": [
        "tabGroups"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "__MSG_extName__",
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "48": "icons/48.png",
            "128": "icons/128.png"
        }
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": true,
        "open_in_tab": true
    },
    "content_security_policy": {
        "extension_pages": "default-src 'self';style-src 'unsafe-inline'; connect-src https://chat.googleapis.com/ https://discord.com/api/webhooks/ ;"
    }
}
